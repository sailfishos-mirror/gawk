#undef setlocale
#include <locale.h>

/* On Posix systems, 'setlocale' looks at LC_* variables in the
   environment, and Gawk users might expect that on Windows as well.
   The replacement implementation below does that, and also fixes a
   few additional quirks with locales on Windows.  */
static const char *
lc_var (int category)
{
  static const char *loc_name[LC_MAX - LC_MIN + 1] = {
    "LC_ALL", "LC_COLLATE", "LC_CTYPE", "LC_MONETARY", "LC_NUMERIC", "LC_TIME"
  };

  /* This function assumes LC_* categories are small numbers between 0
     and 5, as shown above, so if that changes at some point, complain
     vociferously.  */
  if (LC_ALL != 0 || LC_CTYPE != 2 || LC_TIME != 5)
    abort ();
  /* Ensured by the caller, so should never happen.  */
  if (category < LC_MIN || category > LC_MAX)
    return "????";
  return loc_name[category];
}

/* Cache last locale set by Gawk, for fast access below.  */
static char *current_locale;
static int is_C_locale;
static LCID current_lcid;

static void
cache_locale (const char *locale)
{
  if (current_locale)
    free (current_locale);
  current_locale = strdup (locale);
  is_C_locale =
    strncmp (locale, "C", 1) == 0 || strncmp (locale, "POSIX", 5) == 0;
  if (is_C_locale)
    mingw_using_utf8 (-2);
  current_lcid = GetThreadLocale ();
}

char *
w32_setlocale (int category, const char *value)
{
  const char *new_locale = value;
  char *retval;
  UINT console_outputcp;

  if (LC_MIN <= category && category <= LC_MAX
      && value && *value == '\0')
    {
      const char *lc_val = getenv ("LC_ALL");

      if (!lc_val)
	lc_val = getenv (lc_var (category));
      if (!lc_val)
	lc_val = getenv ("LANG");
      if (lc_val)
	new_locale = lc_val;
    }

  /* If VALUE includes a codeset, i.e. a Windows codepage number, we
     must also set the LC_CTYPE locale to the same value, because
     LC_CTYPE is the only category which is documented to be able to
     change the codepage.  */
  if (new_locale && category != LC_ALL && category != LC_CTYPE)
    {
      const char *p = strchr (new_locale, '.');

      if (p && (isdigit (p[1])
		|| stricmp (p + 1, "utf8") == 0
		|| stricmp (p + 1, "utf-8") == 0))
	{
	  if (setlocale (LC_CTYPE, new_locale))
	    cache_locale (new_locale);
	}
    }
  retval = setlocale (category, new_locale);
  console_outputcp = GetConsoleOutputCP ();
  if (!new_locale
      && (strcmp (retval, "C") == 0 || strcmp (retval, "POSIX") == 0)
      && mingw_using_utf8 (0))
    retval = ""; /* pretend we are not in "C" locale when using UTF-8 */
  if (new_locale && retval && (category == LC_ALL || category == LC_CTYPE))
    {
      if (strcmp (retval, "C") == 0 || strcmp (retval, "POSIX") == 0)
	mingw_using_utf8 (-1);
      cache_locale (new_locale);
    }
#ifndef _UCRT
  /* With MSVCRT, stdio works well with UTF-8 encoded text only in the
     "C" locale.  */
  if (new_locale && (category == LC_ALL || category == LC_CTYPE)
      && console_outputcp == 65001)
    setlocale (LC_CTYPE, "C");	/* but don't cache it! */
#endif
  return retval;
}

