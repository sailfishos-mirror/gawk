/* We provide our own replacements for wide-character classification
   functions because the ones in the Windows runtime don't support
   characters beyond the BMP.  Note that we only extend them when
   using UTF-8 as the codeset, otherwise we delegate to the Windows
   runtime.  */

#undef towlower
#undef towupper
#undef iswupper
#undef iswlower
#undef iswalnum
#undef iswctype
#undef iswalpha
#undef iswctype
#undef iswdigit
#undef iswcntrl
#undef iswprint
#undef iswgraph
#undef iswpunct
#undef iswspace
#undef iswxdigit
#undef btowc
#undef wctob
#undef wctype

static int
c32_get_type (char32_t c32)
{
  wchar_t wc[2];
  int num_wchars;
  unsigned short char_type[2];

  if (c32 == WEOF || c32 > 0x10FFFF)
    return 0;

  /* Note: the ASCII case is already optimized for by the callers.  */

  /* Convert C32 to UTF-16.  */
  if (c32 < 0x10000)
    {
      wc[0] = c32;
      wc[1] = 0;
    }
  else
    {
      wc[0] = ((c32 - 0x10000) >> 10) + 0xD800; /* high surrogate */
      wc[1] = (c32 & 0x3FF) + 0xDC00;	        /* low surrogate */
    }
  num_wchars = 1 + (wc[1] != 0);
  if (GetStringTypeW (CT_CTYPE1, wc, num_wchars, char_type))
    {
      if (num_wchars == 1)
	return char_type[0];
      /* Note: MS docs don't document what is put in character types
         for each of the two UTF-16 units.  */
      return (char_type[0] | char_type[1]);
    }
  return 0;
}

int
c32isalnum (char32_t c32)
{
  wint_t ch;

  if (c32 <= 127)
    return isalnum (c32);
  else if (mingw_using_utf8 (0))
    return (c32_get_type (c32) & (C1_ALPHA | C1_DIGIT)) != 0;
  ch = c32;
  return iswalnum (ch);
}

