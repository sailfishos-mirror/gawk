/* Note: this is not used anymore, see a better implementation below,
   in c32tob, which accepts a char32_t argument.  Left here only for
   reference, if similar issues will pop up.  */

#include <wchar.h>

int
wctob (wint_t wc)
{
  char buf[64];

  if (!(MB_CUR_MAX <= sizeof (buf)))
    abort ();
  /* Handle the case where WEOF is a value that does not fit in a wchar_t.  */
  if (wc == (wchar_t)wc)
